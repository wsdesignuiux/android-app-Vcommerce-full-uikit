<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ws.wolfsoft.mobile.V_Commerce_otp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_mobile"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/View_line"/>

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:textSize="23sp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="XXXX"
                android:layout_weight="2"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="0dp"
                android:background="@color/transparent"
                android:textSize="13sp"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/View_line"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="43dp"/>


        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="9549990169  will be linked with \nrushabhpatel381@gmail.com"
            />

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#a62c8d"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:text="Edit Phone number"
            />

    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="95dp"
      android:orientation="vertical"
      android:id="@+id/layout"
      android:layout_alignParentBottom="true"
      android:background="@drawable/gradiant">

      <customfonts.MyTextView_Roboto_Medium
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="We are verifying your mobile number"
          android:gravity="center"
          android:textColor="@color/white"
          android:layout_marginTop="34dp"
          android:textSize="12.5dp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="17.5dp"
          android:gravity="center"
          android:orientation="horizontal">

      <ImageView
          android:layout_width="6dp"
          android:layout_height="6dp"
         android:layout_gravity="center"
          android:layout_margin="3dp"
          android:src="@drawable/ic_circular"/>

          <ImageView
              android:layout_width="6dp"
              android:layout_height="6dp"
              android:layout_gravity="center"
              android:layout_margin="3dp"

              android:src="@drawable/ic_circular"/>

          <ImageView
              android:layout_width="6dp"
              android:layout_height="6dp"
              android:layout_gravity="center"
              android:layout_margin="3dp"

              android:src="@drawable/ic_circular"/>
      </LinearLayout>
  </LinearLayout>

    <customfonts.MyTextView_Roboto_Medium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:gravity="center"
        android:layout_above="@+id/layout"
        android:textColor="#818181"
        android:layout_marginBottom="15dp"
        android:textSize="13.5dp"/>

</RelativeLayout>
