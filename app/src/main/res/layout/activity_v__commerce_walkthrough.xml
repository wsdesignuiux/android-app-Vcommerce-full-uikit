<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".V_Commerce_walkthrough">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <customfonts.MyTextView_Roboto_Bold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23.3sp"
        android:text="V Commerce"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"/>

    <customfonts.MyTextView_Roboto_Bold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12.3sp"
        android:text="INDIA's Leading Ecommerce Platform"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="3dp"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="28dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:clipToPadding="false"
        android:id="@+id/viewpager">

    </android.support.v4.view.ViewPager>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        app:ci_drawable="@drawable/ic_circular1"
        android:paddingBottom="15dp"
        app:ci_drawable_unselected="@drawable/ic_circular"
        app:ci_width="5dp"
        app:ci_height="5dp" />


    </LinearLayout>

    <customfonts.MyTextView_Roboto_Medium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login With Gmail"
        android:id="@+id/gmail"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:padding="13.7dp"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/round_corners_red"/>

    <customfonts.MyTextView_Roboto_Medium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login With Facebook"
        android:layout_above="@+id/gmail"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:padding="13.7dp"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/round_corners_blue"/>

</RelativeLayout>